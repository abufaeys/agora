<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1>Edit Flair</h1>

      <form action="/topics/<%= topicId %>/posts/<%= flair.postId %>/flairs/<%= flair.id %>/update" method="post">
        <div class="form-group">
          <label for="name">Flair Name</label>
          <input value="<%= flair.name %>" type="text" class="form-control" name="name" aria-describedby="titleHelp" placeholder="Enter Name">
        </div>
        <div class="form-group">
          <label for="color">Flair Color</label>
          <input value="<%= flair.color %>" type="color" name="color">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
